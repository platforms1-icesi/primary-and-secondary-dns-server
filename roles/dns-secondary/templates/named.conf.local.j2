include "/etc/bind/tsig.key";

zone "plataformas.local" {
    type slave;
    file "/etc/bind/zones/db.plataformas.local";
    masters { 192.168.20.10 key transfer-key; };
};

// Reverse zone for IPv4 network 192.168.10.0/24
zone "10.168.192.in-addr.arpa" {
    type slave;
    file "/etc/bind/zones/db.192.168.10";
    masters { 192.168.20.10 key transfer-key; };
};

// Reverse zone for IPv4 network 192.168.20.0/24
zone "20.168.192.in-addr.arpa" {
    type slave;
    file "/etc/bind/zones/db.192.168.20";
    masters { 192.168.20.10 key transfer-key; };
};

// Reverse zone for IPv6 network 2001:DB8:10::/64
zone "0.1.0.0.8.b.d.0.1.0.0.2.ip6.arpa" {
    type slave;
    file "/etc/bind/zones/db.2001.db8.0010.ip6.arpa";
    masters { 192.168.20.10 key transfer-key; };
};

// Reverse zone for IPv6 network 2001:DB8:20::/64
zone "0.2.0.0.8.b.d.0.1.0.0.2.ip6.arpa" {
    type slave;
    file "/etc/bind/zones/db.2001.db8.0020.ip6.arpa";
    masters { 192.168.20.10 key transfer-key; };
};

// Reverse zone for DNS64 prefix 2001:DB8:64::/96
zone "4.6.0.0.8.b.d.0.1.0.0.2.ip6.arpa" {
    type slave;
    file "/etc/bind/zones/db.2001.db8.0064.ip6.arpa";
    masters { 192.168.20.10 key transfer-key; };
};
